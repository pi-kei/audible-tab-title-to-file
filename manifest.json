{
  "manifest_version": 2,

  "name": "Audible Tab Title To Server",
  "description": "Sends audible tab title to http-server",
  "version": "1.0.0",

  "permissions": [
    "http://localhost/*",
    "activeTab",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
